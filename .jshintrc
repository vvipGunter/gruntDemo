{
              //具体设置参见:http://jshint.com/docs/options/

                //【注意:不肯定的设置为默认值false】

                //强制选项 
                "bitwise": true,//禁用位运算符，位运算符在 JavaScript 中使用较少，经常是把 && 错输成 &
                "curly": true,//循环或者条件语句必须使用花括号包围
                "enforceall":false,//
                "eqeqeq": true,//强制使用三等号
                "es3": true,//兼容低级浏览器 IE 6/7/8/9
                //"es5":false,//
                "esversion":false,//
                "forin":false,//
                "freeze": true,//禁止重写原生对象的原型，比如 Array ， Date 等
                "funcscope":false,//
                "futurehostile":false,//
                "globals":false,//
                "immed": true,
                "indent": true,//代码缩进
                "iterator":false,//
                "latedef": "nofunc",//禁止定义之前使用变量，忽略 function 函数声明 
                "maxcomplexity": 4,//复杂度检测
                "maxdepth": 4,//最大嵌套深度
                "maxerr":50,//This options allows you to set the maximum amount of warnings JSHint will produce before giving up
                "maxlen": 600,//最大行数
                "maxparams": 10,//最多参数个数,允许设置每个函数的形参最大数量
                "maxstatements":6,//允许您设置语句允许的最大声明数,函数也算声明
                //"newcap": true,//构造器函数首字母大写 (下一个版本将要删除)
                "noarg": true,//禁止使用 arguments.caller 和 arguments.callee ，未来会被弃用， ECMAScript 5 禁止使用 arguments.callee 
                "nocomma": true,//This option prohibits the use of the comma operator. When misused, the comma operator can obscure the value of a statement and promote incorrect code.
                "noempty": true,//空的代码块会提示
                "nonbsp": false,//?
                "nonew": true,//This option prohibits the use of constructor functions for side-effects. Some people like to call constructor functions without assigning its result to any variable:new MyConstructor();
                "notypeof": true,//检查无效的 typeof 操作符值 
                "predef":false,//?
                "quotmark": "double",//JS代码必须双引号,[可选为三个 true "signle" "double"]
                "regexp": true,
                "shadow": "outer",//?
                "strict": true,//严格模式
                "singleGroups": false,//
                "unused": true, //未使用
                "undef": true,//
                "varstmt":false,//When set to true, the use of VariableStatements are forbidden



                //宽松选项
                "asi":true,//控制“缺少分号”的警告
                "boss":true,//控制“缺少分号”的警告
                "debug":true,//This option suppresses warnings about the debugger statements in your code.
                "elision":true,//This option tells JSHint that your code uses ES3 array elision elements, or empty elements (for example, [1, , , 4, , , 7]).
                "eqnull":false,
                "esnext":false,
                "evil":false,
                "expr":false,
                "globalstrict":false,
                "lastsemic":true,//检查一行代码最后声明后面的分号是否遗漏
                "laxbreak":true,
                "laxcomma":true,//检查不安全的折行，忽略逗号在最前面的编程风格
                "loopfunc":true,//检查循环内嵌套 function 
                "moz":false,
                "multistr":true,//检查多行字符串
                "noyield":false,
                "plusplus":false,
                "proto":false,
                "scripturl":false,
                "sub":false,
                "supernew":false,
                "validthis":false,
                "withstmt":false,


                //环境
                "browser": true,//预定义一些全局变量:预定义全局变量 document ， navigator ， FileReader 等 
                "browserify":false,//
                "couch":false,//
                "devel": true,//定义用于调试的全局变量： console ， alert 
                "dojo":false,//
                "jasmine": false,//
                "jquery": true,//定义全局变量
                "mocha": false,//
                "module": false,//
                "mootools":false,//
                "node": true, //定义全局变量
                "nonstandard": true,//
                "phantom": false,//
                "prototypejs": false,//
                "qunit": false,//
                "rhino": false,//
                "shelljs": false,//
                "typed": false,//
                "worker": false,//
                "wsh": false,//
                "yui": false
}
